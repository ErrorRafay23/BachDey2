@model IEnumerable<BACH_DEY.Models.Product>


<div class="card-deck">
    @foreach (var item in Model)
    {
        var photo = "~/Images/" + (item.IamgePath ?? "noimg.jpg");
    <div class="card mb-3" style="min-width:18rem; max-width:30.5%;">

        <h3 class="card-header">@item.Title</h3>
        <div class="card-body">
            <h5 class="card-title">Price : @item.Price  </h5>
            <h6 class="card-subtitle text-muted">Location : @item.Location</h6>
        </div>
        <img class="card-img-top imageThumbnail" src="@photo" height="200"  alt="Card image cap"
             asp-append-version="true">
      
        <div class="card-body">
            <p class="card-text">Description : @item.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Brand : @item.Brand</li>
            <li class="list-group-item">Mobile No : @item.PhoneNo</li>

        </ul>
        <div class="card-body ">
            <a asp-controller="home" asp-action="EditProduct" asp-route-id="@item.ID" class="btn btn-success">Edit</a>
            <a asp-controller="home" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
        </div>
        <div class="card-footer text-muted">
            @DateTime.Now
        </div>
    </div>

    }
</div>

